swiper {
  width: 700rpx;
  height: 75vh;
  margin: 0 auto;
}
swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 48rpx;
}



.page {
  min-height: 100vh;
  display: flex;
}

.page__bd {
  flex: 1 1;
}

.tab-content {
  font-size: 11pt;
  padding: 24rpx;
}



.commodity__info {
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  align-items: center;
  height: 15vh;
}

.commodity__name {
  margin-right: 20rpx;
}