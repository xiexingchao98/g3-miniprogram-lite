.page {
  padding: 12rpx 18rpx;
}
.page__hd{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  width: 100%;
  height: 100rpx;
  align-items: center;
  padding: 12rpx 0;
}
.custom-class{
  height: 100%;
  width: 100%;
}	
.message {
  position: relative;
}

.message__red-circle {
  position: absolute;
  top: -5px;
  left: 22px;
  border-radius: 999px;
  width: 40rpx;
  height: 40rpx;
  font-size: 6pt;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  background: #c62828;
  color: #fff;
}