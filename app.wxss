@import "material.wxss";

@font-face {
  font-family: 'puhui';
  font-display: swap;
  src: url('//at.alicdn.com/t/webfont_diok0tf4rf.eot'); /* IE9*/
  src: url('//at.alicdn.com/t/webfont_diok0tf4rf.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('//at.alicdn.com/t/webfont_diok0tf4rf.woff2') format('woff2'),
  url('//at.alicdn.com/t/webfont_diok0tf4rf.woff') format('woff'), /* chrome、firefox */
  url('//at.alicdn.com/t/webfont_diok0tf4rf.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
  url('//at.alicdn.com/t/webfont_diok0tf4rf.svg#AlibabaPuHuiTiL') format('svg'); /* iOS 4.1- */
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  font-family: puhui;
  color: rgba(0,0,0,.78);
}

.page {
  min-height: 100vh;
}

.price::before {
  content: '￥';
}

.price {
  font-size: 9pt;
  color: orange;
  letter-spacing: 3rpx;
}

.price__number {
  font-size: 12pt;
  font-weight: bold;
}

.price__number_size-s {
  font-size: 11pt;
}

.price__number_size-m {
  font-size: 13pt;
}

.price__number_size-l {
  font-size: 14pt;
}

.buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
  z-index: 9;
}

.button {
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  text-align: center;
  padding: 20rpx;
  font-size: 10pt;
  transition: .1s ease;
  line-height: 1;
}

.button_style-inline {
  display: inline-flex;
}

.buttons .button {
  flex: 1 1;
  margin: 0 24rpx;
}

.button_theme-light {
  color: #ababab;
  border: 1px solid #ececec;
  background: #fff;
}

.button_theme-light_active {
  color: #000;
  border: 1px solid #ececec;
  background: #ececec;
}

.button_theme-blue {
  color: #1e88e5;
  background: #fff;
  border: 1px solid #1e88e5;
}

.button_theme-blue_active {
  color: #fff;
  background: #1e88e5;
}

.button_theme-primary {
  color: #009acd;
  border: 1px solid #009acd;
  background: #fff;
}

.button_theme-primary_active {
  color: #fff;
  background: #009acd;
}

.button_theme-light_active {
  box-shadow: 0 8rpx 32rpx -6rpx lightgray;
}


.button_shape-rounded {
  border-radius: 999rpx;
}

.button_theme-buy {
  color: #fff;
  background: linear-gradient(45deg, #8b00dd, #e98df5);
}

.button_theme-buy_active {
  box-shadow: 0 8rpx 32rpx -6rpx #cd00ea;
}

.button_theme-pay {
  color: #fff;
  background: linear-gradient(45deg, orange, orangered);
}

.button_theme-pay_active {
  box-shadow: 0 8rpx 32rpx -6rpx orangered;
}

.button_theme-login {
  color: #fff;
  background: linear-gradient(135deg, #4a148c, #9c27b0);
}

.button_size-m {
  padding: 16rpx 48rpx;
}

.button_size-l {
  padding: 24rpx 96rpx;
}

.icon {
}

.icon_size-24 {
  width: 24px;
  height: 24px;
}

.text {
  font-size: 11pt;
}

.text_size-s {
  font-size: 10pt;
}

.text_size-m {
  font-size: 12pt;
}

.text_size-l {
  font-size: 14pt;
}

.commodity-wrapper_theme-primary {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px 16px;
  background: #efefef;
}

.commodity_theme-primary {
  color: rgba(0,0,0,.6);
  background: #fff;
  font-size: 10pt;
  display: flex;
  flex-direction: column;
  border-radius: 18rpx;
  box-shadow: 6rpx 6rpx 32rpx #ececec;
  margin: 12rpx 8rpx;
  flex: 1 1 39%;
  max-width: 44.5%;
  padding: 20rpx;
}

.commodity__cover_size-m {
  width: 100%;
  height: 280rpx;
}

.commodity__name {
  flex: 1 1;
  font-size: 10pt;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.commodity__price::before {
  content: '￥';
}

.commodity__price {
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-size: 12pt;
  color: orange;
  text-align: right;
}

.commodity__tag {
  font-size: 9pt;
  border: 1px solid lightgray; 
  padding: 8rpx 18rpx;
  margin: 12rpx;
}

.commodity__attribute {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.commodity__tag-list {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10rpx;
}

.commodity__info {
  display: flex;
  flex-direction: column;
  flex: 1 1;
}

.commodity__info_direction-row {
  flex-direction: row;
}

.hero {
  font-size: 16pt;
  letter-spacing: 2rpx;
  font-weight: bold;
  padding: 48rpx 36rpx;
}

.hero_size-m {
  padding: 78rpx 36rpx;
}

.hero_theme-purple {
  color: #fff;
  background: linear-gradient(175deg, #8b00dd, #cd00ea, #e98df5)
}

.hero_theme-orangered {
  color: #fff;
  background: linear-gradient(175deg, orangered, orangered 35%, orange)
}

.hero_theme-dark {
  color: #fff;
  background-image: linear-gradient(141deg, #1f191a 0, #363636 71%, #46403f 100%);
}

.title {
  margin: 24rpx 0;
}

.title_has-icon {
  display: flex;
}

.title__text {
  margin-left: 8rpx;
}

.title_size-m {
  font-size: 18pt;
  margin: 36rpx 0;
}

.post-preview {
  background: #fff;
  padding: 24rpx;
  box-shadow: 4rpx 8rpx 24rpx -3rpx lightgray;
  margin-bottom: 24rpx;
  position: relative;
}

.post__create-time,
.post__last-comment-time {
  font-size: 8pt;
}

.post__create-time::before {
  content: '发布于：';
}

.post__last-comment-time::before {
  content: '最后回复于：';
}

.post__comment-count {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  display: inline-block;
  font-size: 8pt;
}

.post__comment-count::before {
  content: '评论数';
  margin-right: 8rpx;
}

.post__owner-name {
  font-size: 9pt;
}

.post__owner-name::before {
  content: '发帖人';
  margin-right: 18rpx;
}

.comment {
  padding: 12rpx 24rpx 24rpx 24rpx;
  margin: 24rpx 0;
  border-bottom: 1px solid lightgray;
}

.post__comment-count {
  border: 1px solid lightgray;
  padding: 6rpx 12rpx;
}

.disable {
  display: none !important;
}

.shadow {
  width: 750rpx;
  height: 100vh;
  overflow: hidden;
  background: rgba(0,0,0,.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}

.input {
  border: 1px solid #e5e5e5;
  padding: 6rpx 8rpx;
  border-radius: 10rpx;
}

.input_style-inline {
  display: inline-flex;
}

.textarea {
  width: auto;
  border: 1px solid #e5e5e5;
  padding: 12rpx;
  border-radius: 10rpx;
}

button {
  position: none;
  padding: none;
  font-size: none;
  line-height: none;
  border-radius: none;
  background-color: none;
  margin: none;
  border: none;
}

button::after {
  border: none;
}